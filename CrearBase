CREATE DATABASE RECETARIO_DB

CREATE TABLE dbo.TIPO  
   (TIPO_ID INT PRIMARY KEY IDENTITY(1,1) NOT NULL,  
    DESCRIPCION VARCHAR(50) NOT NULL)  
GO

CREATE TABLE dbo.COMIDA
	(COMIDA_ID INT PRIMARY KEY IDENTITY(1,1) NOT NULL,
	NOMBRE VARCHAR(50) NOT NULL,
	TIPO_ID INT FOREIGN KEY REFERENCES TIPO(TIPO_ID))
GO

CREATE TABLE dbo.PASOS  
    (PASO_ID INT PRIMARY KEY IDENTITY(1,1) NOT NULL,  
    ENUNCIADO VARCHAR(200) NOT NULL,
	ORDEN INT NOT NULL,
	COMIDA_ID INT FOREIGN KEY REFERENCES COMIDA(COMIDA_ID))
GO

CREATE TABLE dbo.INGREDIENTES
	(INGREDIENTE_ID INT PRIMARY KEY IDENTITY(1,1) NOT NULL,
	NOMBRE VARCHAR(50) NOT NULL,
	CANTIDAD FLOAT NOT NULL,
	UNIDAD_DE_MEDIDA VARCHAR(20),
	ES_OBLIGATORIO BIT NOT NULL,
	COMIDA_ID INT FOREIGN KEY REFERENCES COMIDA(COMIDA_ID))
GO
